---
interface Props {
  text: string
  href?: string
  type?: "button" | "submit" | "reset"
}

const { text, href, type = "button" } = Astro.props;
---

{href ? (
  <a
    href={href}
    class="text-white bg-primary focus:outline-none cursor-pointer focus:ring-4 focus:ring-secondary font-medium rounded-full text-sm px-5 py-2.5 text-center"
  >
    {text}
  </a>
) : (
  <button
    type={type}
    class="text-white bg-primary focus:outline-none cursor-pointer focus:ring-4 focus:ring-secondary font-medium rounded-full text-sm px-5 py-2.5 text-center"
  >
    {text}
  </button>
)}
