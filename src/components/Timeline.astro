---
import Heading from "./Heading.astro";

const heading = "What We've been up to";
const dates = ["2021 – Present", "2018 – 2021", "2015 – 2018"];
const info = [
  "Founder & Principal Attorney – Vic's Law Firm",
  "Attorney – Community Legal Services",
  "Associate Attorney – Criminal Defense & Family Law",
];
const details = [
  "Established Vic's Law Firm with a primary focus on immigration law. Dedicated to assisting families with petitions, naturalization, and adjustment of status cases, while maintaining a reputation for compassionate, detail-oriented, and professional representation.",
  "Focused on providing accessible legal services to underserved communities. Advised and represented clients in immigration matters, ensuring they received fair treatment and clear guidance through complex processes.",
  "Gained extensive courtroom experience representing clients in DUI matters and family law disputes. Developed a strong foundation in advocacy and litigation practice, helping clients navigate challenging and emotionally charged cases.",
];
---

<Heading heading={heading} />
<div class="mb-12 px-8">
  <ol class="relative border-l border-gray-200 dark:border-gray-700">
    {
      dates.map((date) => {
        return (
          <li class="mb-10 ml-4">
            <div class="absolute w-3 h-3 bg-primary rounded-full mt-1.5 -left-1.5 border border-white " />
            <time class="mb-1 text-sm font-normal leading-none text-primary dark:text-white">
              {date}
            </time>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
              {info[dates.indexOf(date)]}
            </h3>
            <p class="mb-4 text-base font-normal text-gray-700 dark:text-gray-400">
              {details[dates.indexOf(date)]}
            </p>
          </li>
        );
      })
    }
  </ol>
</div>
