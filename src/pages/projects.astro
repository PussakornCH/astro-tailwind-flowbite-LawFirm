---
const title = "Services";
const subtitle = "Our Detail Services";

import Layout from "../layouts/Layout.astro";

import HeaderSmall from "../components/HeaderSmall.astro";
import ProjectCard from "../components/ProjectCards.astro";
import data from "../data/site.json";

type Props = {
  projectTitle: string;
  href: string;
  body: string;
  type?: string;
  repo?: string;
};
---

<Layout title="Services">
  <main>
    <HeaderSmall title={title} subtitle={subtitle} />
    <div class="">
      <section class="section">
        <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16">
          <div class="grid md:grid-cols-2 sm:grid-cols-1 gap-8">
            {
              data.projects.map(
                (
                  value: {
                    projectTitle: string;
                    href: string;
                    about: string;
                    repo?: string;
                    type?: string;
                  },
                  index: number
                ) => {
                  // normalize href so 'project/one' -> '/project/one'
                  const normalizedHref = value.href && !value.href.startsWith('/') && !value.href.startsWith('http') ? `/${value.href}` : value.href;
                  return (
                    <ProjectCard
                      projectTitle={value.projectTitle}
                      href={normalizedHref}
                      body={value.about}
                      type={value.type}
                      repo={value.repo}
                    />
                  );
                }
              )
            }
          </div>
        </div>
      </section>
    </div>
  </main>
</Layout>

